<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".ui.RegistrationActivity">
    <EditText
        android:id="@+id/editTextName1"
        android:layout_width="351dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:hint="Full Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextEmail1"
        android:layout_width="355dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName1" />

    <EditText
        android:id="@+id/editTextPassword1"
        android:layout_width="353dp"
        android:layout_height="49dp"
        android:layout_marginTop="26dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="134dp"
        android:layout_height="63dp"
        android:layout_marginTop="48dp"
        android:text="@string/register"
        android:backgroundTint="@color/green"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword1" />
</androidx.constraintlayout.widget.ConstraintLayout>