<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Plant Image -->
    <ImageView
        android:id="@+id/ivPlantImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/image_placeholder" />

    <!-- Plant Name -->
    <TextView
        android:id="@+id/tvPlantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:text="@string/plant_name" />

    <!-- Plant Description -->
    <TextView
        android:id="@+id/tvPlantDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textColor="@color/green"
        android:text="@string/short_description_placeholder" />

    <!-- Watering Info -->
    <TextView
        android:id="@+id/tvWatering"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:textColor="@color/green"
        android:text="@string/low_watering"
        app:drawableLeftCompat="@drawable/water_drop_24px" />

    <!-- Propagation Methods -->
    <TextView
        android:id="@+id/tvPropagation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:drawablePadding="4dp"
        android:textColor="@color/green"
        android:text="@string/propagation_division"
        app:drawableLeftCompat="@drawable/ic_leaf" />

    <!-- Add Plant Button -->
    <Button
        android:id="@+id/btnAddPlant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:text="@string/add_plant" />

</LinearLayout>
